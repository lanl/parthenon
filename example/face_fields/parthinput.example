<parthenon/job>
problem_id = facefields

<parthenon/mesh>
nx1 = 32
x1min = -1.0
x1max = 1..0
ix1_bc = outflow
ox1_bc = outflow

nx2 = 32
x2min = -1.0
x2max = 1.0
ix2_bc = outflow
ox2_bc = outflow

nx3 = 32
x3min = -1.0
x3max = 1.0
ix3_bc = outflow
ox3_bc = outflow

<parthenon/meshblock>
nx1 = 8
nx2 = 8
nx3 = 8

<FaceExample>
px = 1.0
py = 1.0
pz = 1.0

<parthenon/time>
nlim = 0

# Following two output blocks don't do anything yet, 
# but will be used in future to do answer checking.
<parthenon/output0>
file_type = hdf5
dt = 0.05
variables = c.c.interpolated_value, &
            f.f.face_averaged_value

<parthenon/output1>
file_type = rst
dt = 0.05
