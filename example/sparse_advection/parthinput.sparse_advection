<parthenon/job>
problem_id = advection

<parthenon/mesh>
refinement = adaptive
numlevel = 3

nx1 = 64
x1min = -1.0
x1max = 1.0
ix1_bc = periodic
ox1_bc = periodic

nx2 = 64
x2min = -1.0
x2max = 1.0
ix2_bc = periodic
ox2_bc = periodic

nx3 = 1
x3min = -1.0
x3max = 1.0
ix3_bc = periodic
ox3_bc = periodic

<parthenon/meshblock>
nx1 = 8
nx2 = 8
nx3 = 1

<parthenon/time>
nlim = -1
tlim = 1.0
integrator = rk2
ncycle_out_mesh = -10000

<SparseAdvection>
cfl = 0.45
speed = 1.0

refine_tol = 0.3    # control the package specific refinement tagging function
derefine_tol = 0.03

<parthenon/output1>
file_type = rst
dt = 0.05

<parthenon/output0>
file_type = hdf5
dt = 0.05
variables = advected, advected_1, & # comments are ok
            one_minus_advected, &
            one_minus_advected_sq, & # on every (& characters are ok in comments)
            one_minus_sqrt_one_minus_advected_sq # line

<parthenon/output3>
file_type = hst
dt = 0.05
