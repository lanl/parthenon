<parthenon/job>
problem_id = poisson

<parthenon/mesh>
# refinement = adaptive
# numlevel = 2

nx1 = 64
x1min = -1
x1max = 1
ix1_bc = periodic
ox1_bc = periodic

nx2 = 64
x2min = -1
x2max = 1
ix2_bc = periodic
ox2_bc = periodic

nx3 = 1
x3min = -1
x3max = 1
ix3_bc = periodic
ox3_bc = periodic

<parthenon/meshblock>
nx1 = 8
nx2 = 8
nx3 = 1

<parthenon/iterations>
ncycle_out = 50
residual = 1e-2
ncheck = 50
nlim = 1000
residual_norm = L2

# <parthenon/refinement0>
# method = derivative_order_1
# field = potential

<poisson>
K = 1
radius = 0.15
weight = 0.66
subcycles = 1

<parthenon/output0>
file_type = hdf5
variables = field, potential, residual
